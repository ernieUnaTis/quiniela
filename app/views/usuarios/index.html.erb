
<table class="table">
  <thead>
    <tr>

      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.nombre %></td>
          <% if usuario.registro == 1 %>
          <td><a href="/usuarios/<%= usuario.id %>">Ver detalle</a></td>
          <% else %>
          <td><a href="/pronosticos/new/<%= usuario.id %>">Dar Pronosticos</a></td>
          
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
